@model IEnumerable<Resenje_2.Models.Exam>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Exams</h2>
<h2> </h2>
<button type="submit"> @Html.ActionLink("New Exam", "New")</button>
<h2> </h2>

@if (Model.Count() == 0)
{
    <p>There are no exams.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Student</th>
                <th>Course</th>
                <th>Grade</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model.ElementAt(i).Student.Name @Model.ElementAt(i).Student.Surname </td>
                    <td>@Model.ElementAt(i).Course.Name</td>
                    <td>@Model.ElementAt(i).Grade</td>                    
                    <td>@Html.ActionLink("Edit", "Edit", "Exams", new { id = Model.ElementAt(i).Id }, null)</td>
                    <td>@Html.ActionLink("Delete", "Delete", "Exams", new { id = Model.ElementAt(i).Id }, null)</td>
                </tr>
            }
        </tbody>
    </table>
}

